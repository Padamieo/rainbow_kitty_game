{
  "presets": [
    ["@babel/env",
      {
        "useBuiltIns": "usage",
        "corejs": "^3.0.0",
        "debug": false
      }
    ]
  ],
  "plugins": [
    "@babel/transform-runtime",
    ["transform-react-jsx", { "pragma": "h" }],
    ["@babel/proposal-class-properties", { "loose": false }],
    [
      "module-resolver",
      {
        "extensions": [".js", ".jsx"],
        "root": ["./src"]
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    }
  }
}